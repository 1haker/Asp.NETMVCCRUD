@model Asp.NETMVCCRUD.Models.Player
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Player", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.PlayerID)
    <div class="form-group">
        @Html.LabelFor(model => model.Nick, new { @class = "control-label" })
        @Html.EditorFor(model => model.Nick, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nick)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Profession, new { @class = "control-label" })
        @Html.EditorFor(model => model.Profession, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Profession)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Guild, new { @class = "control-label" })
        @Html.EditorFor(model => model.Guild, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Level, new { @class = "control-label" })
        @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.Fortune, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.Fortune, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}